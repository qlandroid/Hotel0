<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/layoutBackground"
    android:orientation="vertical"
    tools:context=".ui.aty.FlatLongApplyOutAty">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请退房" />

        <View
            style="@style/div_x"
            android:layout_marginBottom="@dimen/x6"
            android:layout_marginTop="@dimen/x6" />

        <EditText
            android:id="@+id/et_editContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text_background"
            android:gravity="start"
            android:hint="申请退房内容"
            android:lines="5"
            android:padding="@dimen/x6"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/red"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="@dimen/x6"
        android:paddingTop="@dimen/x6"
        android:text="申请退房"
        android:textColor="#fff" />
</LinearLayout>
