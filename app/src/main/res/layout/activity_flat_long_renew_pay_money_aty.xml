<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackground"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="cn.yizhupingtai.android.hotel.ui.aty.FlatLongRenewPayMoneyAty">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:layout_marginTop="@dimen/x6"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x10">

                <ImageView
                    android:id="@+id/iv_flatIcon"
                    android:layout_width="@dimen/x100"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner_icon_2" />


                    <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_marginLeft="@dimen/x10"
                        android:id="@+id/ntv_flatName"
                        android:layout_toRightOf="@+id/iv_flatIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:centrePadding="@dimen/x6"
                        app:content="上海青年公寓"
                        app:contentSize="16sp"
                        app:name="名称"
                        app:nameSize="16sp" />

                    <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ntv_flatAddress"
                        android:layout_below="@+id/ntv_flatName"
                        android:layout_alignLeft="@+id/ntv_flatName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x6"
                        app:centrePadding="@dimen/x6"
                        app:content="上海市浦东新区张杨路707号2501室"
                        app:contentSize="12sp"
                        app:name="地址"
                        app:nameSize="12sp" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2020元/月"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x6"
                android:paddingLeft="@dimen/x10"
                android:paddingTop="@dimen/x6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细信息" />

                <View
                    style="@style/div_x"
                    android:layout_marginBottom="@dimen/x6"
                    android:layout_marginTop="@dimen/x6" />

                <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    app:centrePadding="@dimen/x6"
                    app:content="押一付三"
                    app:contentSize="12sp"
                    app:name="付费方式"
                    app:nameSize="12sp" />

                <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    app:centrePadding="@dimen/x6"
                    app:content="2016年12月15日"
                    app:contentSize="12sp"
                    app:name="入住日期"
                    app:nameSize="12sp" />

                <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    app:centrePadding="@dimen/x6"
                    app:content="2017年12月15日"
                    app:contentSize="12sp"
                    app:name="合同到期日期"
                    app:nameSize="12sp" />
            </LinearLayout>

            <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:padding="@dimen/x6"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x10"
                android:background="#fff"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                app:centrePadding="@dimen/x6"
                app:content="2017年3月15日"
                app:contentSize="12sp"
                app:name="房费到期日期"
                app:nameSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x6"
                android:paddingLeft="@dimen/x10"
                android:paddingTop="@dimen/x6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入住人信息" />

                <View
                    style="@style/div_x"
                    android:layout_marginBottom="@dimen/x6"
                    android:layout_marginTop="@dimen/x6" />

                <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    app:centrePadding="@dimen/x6"
                    app:content="张三"
                    app:contentSize="12sp"
                    app:name="姓名"
                    app:nameSize="12sp" />

                <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    app:centrePadding="@dimen/x6"
                    app:content="186123456789"
                    app:contentSize="12sp"
                    app:name="联系电话"
                    app:nameSize="12sp" />

                <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x4"
                    app:centrePadding="@dimen/x6"
                    app:content="170182199*****1234"
                    app:contentSize="12sp"
                    app:name="身份证"
                    app:nameSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tv_payMoneyName"
            android:textSize="18sp"
            android:text="总金额:"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_formula"
                android:layout_toRightOf="@+id/tv_payMoneyName"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_marginRight="@dimen/x4"
                    android:text="×"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12sp"
                    android:text="2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/ll_formula"
                android:layout_alignLeft="@+id/ll_formula"
                android:orientation="horizontal"
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:text="6060"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="@dimen/x6"
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View style="@style/div_y"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:clickable="true"
            android:gravity="center"
            android:background="@color/red"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="提交订单"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
