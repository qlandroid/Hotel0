<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/x10"
    android:paddingLeft="@dimen/x10"
    android:paddingRight="@dimen/x10"
    android:paddingTop="@dimen/x6">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:scaleType="fitXY"
        android:src="@drawable/banner_icon_1" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/x10"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="豪华大床房"
            android:textSize="16sp"
            android:textColor="@color/textTitleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/x6"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="30m²"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/x4"
                android:layout_marginRight="@dimen/x4"
                android:text="大床"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="双早"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:text="￥204"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/x6"
        android:textSize="16sp"
        android:background="#ff0000"
        android:text="预订"
        android:paddingTop="@dimen/x4"
        android:paddingBottom="@dimen/x4"
        android:paddingLeft="@dimen/x6"
        android:paddingRight="@dimen/x6"
        android:textColor="#fff"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>