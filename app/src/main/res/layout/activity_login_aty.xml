<?xml version="1.0" encoding="utf-8"?>
<cn.yizhupingtai.android.hotel.ui.view.KeyboardLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context="cn.yizhupingtai.android.hotel.ui.aty.LoginAty">

    <ScrollView
        android:id="@+id/sv_scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/v_showContentTop"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/shape_text_background"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x20"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x20">

                <EditText
                    android:id="@+id/et_loginAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="account:"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:hint="password"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:background="#ec3d4e"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/x6"
                android:paddingTop="@dimen/x6"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="@dimen/x6"
                    android:paddingLeft="@dimen/x6"
                    android:paddingRight="@dimen/x6"
                    android:paddingTop="@dimen/x6"
                    android:text="注册"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_retrieve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="@dimen/x6"
                    android:paddingLeft="@dimen/x6"
                    android:paddingRight="@dimen/x6"
                    android:paddingTop="@dimen/x6"
                    android:text="忘记密码"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <View
        android:id="@+id/v_showKey"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</cn.yizhupingtai.android.hotel.ui.view.KeyboardLinearLayout>
