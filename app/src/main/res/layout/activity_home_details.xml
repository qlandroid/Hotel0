<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.aty.HomeDetailsAty">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                app:image_scale_type="fit_xy"
                app:indicator_height="@dimen/x6"
                app:indicator_margin="@dimen/x6"
                app:indicator_width="@dimen/x6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x10">

                <hotel.app.android.hotel0.ui.view.HomeTitleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="浦东新区"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:text="2020元/月"
                    android:textColor="#ff0000"
                    android:textSize="18sp" />
            </LinearLayout>

            <hotel.app.android.hotel0.ui.view.HomeDetailsView
                android:id="@+id/hdv_detailsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:text="房屋描述"
                    android:textColor="@color/textTitleColor" />

                <View style="@style/div_x" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:text="啊手动阀手动阀手动阀手动阀手动阀手动阀啊手动阀手动阀手动阀手动阀手动阀阿斯顿 啊手动阀手动阀手动阀手动阀阿斯蒂芬阿斯顿发射点发生阿斯蒂芬阿斯蒂芬阿斯弗阿斯蒂芬啊手动阀士大夫阿三"
                    android:textColor="@color/textTitleColor" />

                <View style="@style/div_x" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/x6"
                    android:paddingTop="@dimen/x6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="收起"
                        android:textColor="#ff0000" />

                    <ImageView
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x16"
                        android:src="@mipmap/drop_down_selected_icon" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:clickable="true"
            android:id="@+id/tv_lookHome"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:paddingBottom="@dimen/x10"
            android:paddingTop="@dimen/x10"
            android:text="预约看房"
            android:textColor="#fff" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:paddingBottom="@dimen/x10"
            android:paddingTop="@dimen/x10"
            android:text="电话预约"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
