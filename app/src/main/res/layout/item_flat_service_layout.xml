<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/x10"
    android:background="#fff"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginBottom="@dimen/x10"
    android:paddingBottom="@dimen/x10"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center_vertical"
            app:name="订单号"
            app:centrePadding="@dimen/x6"
            app:content="201612251234567"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/x10"
            android:textColor="@color/red"
            android:layout_gravity="right"
            android:text="服务状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <View style="@style/div_x" android:layout_marginTop="@dimen/x6"
        android:layout_marginBottom="@dimen/x6"/>
    <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        app:name="公寓名称"
        app:content="上海青年公寓"
        app:centrePadding="@dimen/x6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        app:name="地址"
        android:layout_marginTop="@dimen/x6"
        app:centrePadding="@dimen/x6"
        app:content="上海市某个区某个地方2015室"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        app:name="申请时间"
        android:layout_marginTop="@dimen/x6"
        app:centrePadding="@dimen/x6"
        app:content="2016-12-12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <cn.yizhupingtai.android.hotel.ui.view.NameTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        app:name="维修内容"
        app:contentMaxLine="2"
        android:layout_marginTop="@dimen/x6"
        app:centrePadding="@dimen/x6"
        app:content="上海市某个区某个地方2015室"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View style="@style/div_x" android:layout_marginTop="@dimen/x6"
        android:layout_marginBottom="@dimen/x6"/>
    <LinearLayout
        android:layout_marginRight="@dimen/x10"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="@dimen/x10"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:text="付款"
            android:paddingBottom="@dimen/x6"
            android:paddingTop="@dimen/x6"
            android:paddingRight="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="@dimen/x10"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:text="服务评价"
            android:paddingBottom="@dimen/x6"
            android:paddingTop="@dimen/x6"
            android:paddingRight="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:text="申诉"
            android:paddingBottom="@dimen/x6"
            android:paddingTop="@dimen/x6"
            android:paddingRight="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>